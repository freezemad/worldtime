{
  "name": "World Time Screen",
  "version": "1.0",
  "description": "Build an Extension to see time in cities around world!",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "images/clock.png",
      "32": "images/clock.png",
      "48": "images/clock.png",
      "128": "images/clock.png"
    }
  },
  "icons": {
    "16": "images/clock.png",
    "32": "images/clock.png",
    "48": "images/clock.png",
    "128": "images/clock.png"
  },
  "browser_action": {
    "default_icon": "images/clock.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/request.js", "src/content-script.js"],
      "css": ["src/custom.css"],
      "run_at": "document_start"
    }
  ],
  "manifest_version": 2
}
